# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*]
charset = utf-8

# HTML & CSS
[*.{html,css}]
indent_style = tab
indent_size = 4

# Javascript
[*.js]
indent_style = tab
indent_size = 2

# Javascript
[*.ts]
indent_style = tab
indent_size = 4

# Javascript
[*.scss]
indent_style = tab
indent_size = 4

# JSON
[*.json]
indent_style = tab
indent_size = 2

# YAML
[*.yml]
indent_style = space
indent_size = 2
